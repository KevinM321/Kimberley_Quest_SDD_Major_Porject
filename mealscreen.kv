<MealScreenLayout>
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/kq_3.jpg'
    Label:
        size_hint_x: .2
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        BoxLayout:
            size_hint_y: .925
            size_hint_x: .85
            Label:
                size_hint_x: .125
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: .25, .25, .25, .8
                    Rectangle:
                        size: self.size
                        pos: self.pos


<MealScreen@Screen>:
    name: 'meal_screen'
    screen_manager: self.screen_manager

    MealScreenLayout:
        screen_manager: root.screen_manager

    SideBar:
        screen_manager: root.screen_manager

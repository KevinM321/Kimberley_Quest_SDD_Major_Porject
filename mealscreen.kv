<MealBox>
    main_meal: _main_meal
    drinks: _drinks
    snacks: _snacks
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .275
            id: _main_meal
        BoxLayout:
            size_hint_y: .275
            id: _snacks
            Label:
                text: 'Snacks'
        BoxLayout:
            size_hint_y: .2
            id: _drinks
            Label:
                text: 'Drinks'
    BoxLayout:
        size_hint_x: .125
<MealPanelItem>
    background_normal: 'res/system/menu_tab_normal.png'
    background_down: 'res/system/menu_tab_down.png'
    MealBox:

<MealTabs>
    size_hint: .5, 1
    do_default_tab: False
    tab_height: 60
    MealPanelItem:
        text: 'Breakfast'
    MealPanelItem:
        text: 'Lunch'
    MealPanelItem:
        text: 'Dinner'

<MealScreenLayout>
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/kq_3.jpg'
    Label:
        size_hint_x: .2
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        BoxLayout:
            size_hint_y: .925
            Label:
                size_hint_x: .2
            BoxLayout:
                MealTabs:
                    background_image: 'res/system/menu_panel.png'
    BoxLayout:
        size_hint_x: .025
    BoxLayout:
        spacing: 15
        size_hint_x: .3
        orientation: 'vertical'
        Widget:
        Button:
            size_hint_y: .15
            text: 'Update'
        Button:
            size_hint_y: .15
            text: 'About'
        Widget:
    BoxLayout:
        size_hint_x: .025




<MealScreen@Screen>:
    name: 'meal_screen'
    screen_manager: self.screen_manager

    MealScreenLayout:
        screen_manager: root.screen_manager

    SideBar:
        screen_manager: root.screen_manager

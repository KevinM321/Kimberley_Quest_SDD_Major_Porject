<MealBox>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .275
            Label:
                text: 'Main Meal'
        BoxLayout:
            size_hint_y: .275
            Label:
                text: 'Snacks'
        BoxLayout:
            size_hint_y: .2
            Label:
                text: 'Drinks/Others'
    BoxLayout:
        size_hint_x: .125
<MealPanelItem>
    background_normal: 'res/system/menu_tab_normal.png'
    background_down: 'res/system/menu_tab_down.png'
    MealBox:

<MealTabs>
    size_hint: .5, 1
    do_default_tab: False
    tab_height: 60
    MealPanelItem:
        text: 'Breakfast'
    MealPanelItem:
        text: 'Lunch'
    MealPanelItem:
        text: 'Dinner'

<MealScreenLayout>
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/kq_3.jpg'
    Label:
        size_hint_x: .2
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        BoxLayout:
            size_hint_y: .925
            size_hint_x: .85
            Label:
                size_hint_x: .125
            BoxLayout:
                MealTabs:
                    background_image: 'res/system/menu_panel.png'




<MealScreen@Screen>:
    name: 'meal_screen'
    screen_manager: self.screen_manager

    MealScreenLayout:
        screen_manager: root.screen_manager

    SideBar:
        screen_manager: root.screen_manager

# layout containing each section of the meal selection
<MealBox>
    main_meal: _main_meal
    drinks: _drinks
    snacks: _snacks
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .275
            id: _main_meal
            Label:
                size_hint_y: .6
                text: 'Main Course'
                bold: True
                font_size: 27.5
                canvas.before:
                    Color:
                        rgba: .35, .35, .35, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .21
            id: _snacks
            Label:
                font_size: 27.5
                size_hint_y: .6
                text: 'Snacks'
                bold: True
                canvas.before:
                    Color:
                        rgba: .35, .35, .35, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            id: _drinks
            Label:
                font_size: 27.5
                size_hint_y: .6
                text: 'Drinks'
                bold: True
                canvas.before:
                    Color:
                        rgba: .35, .35, .35, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

<MenuItem>
    height: 60
    checkbox_group: _checkbox_group
    name: _name
    desc: _desc
    Widget:
        size_hint_x: .05
    BoxLayout:  # contains the name and description labels of the meal
        orientation: 'vertical'
        Label:
            text_size: self.size
            size_hint_y: .5
            id: _name
            font_size: 18.5
            halign: 'left'
        BoxLayout:
            size_hint_y: .7
            Widget:
                size_hint_x: .05
            Label:
                padding_y: 16
                text_size: self.size
                color: .7, .7, .7, 1
                id: _desc
                font_size: 17.5
                halign: 'left'
    BoxLayout:  # contains the selectable check box for the meal
        size_hint_x: .1
        CheckBox:
            id: _checkbox_group
            background_radio_normal: 'res/system/checkbox_normal.png'
            background_radio_down: 'res/system/checkbox_down.png'

<MealPanelItem>
    font_size: 17.5
    meal_box: _meal_box
    background_normal: 'res/system/menu_tab_normal.png'
    background_down: 'res/system/menu_tab_down.png'
    MealBox:
        id: _meal_box

<MealTabs>
    size_hint: .5, 1
    do_default_tab: False
    tab_height: 60
    MealPanelItem:
        group: 'panel'
        text: 'Breakfast'
    MealPanelItem:
        group: 'panel'
        text: 'Lunch'
    MealPanelItem:
        group: "panel"
        text: 'Dinner'

<MealScreenLayout>
    # background image of the meal screen
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/kq_3.jpg'
    BoxLayout:
        Label:
            size_hint_x: .2
        AnchorLayout:  # layout for the left part of the meal screen
            anchor_x: 'left'
            anchor_y: 'center'
            BoxLayout:
                size_hint_y: .925
                Label:
                    size_hint_x: .2
                BoxLayout:
                    MealTabs:
                        background_image: 'res/system/menu_panel.png'
        BoxLayout:
            size_hint_x: .025
        BoxLayout:  # layout for the right part of the screen
            spacing: 35
            size_hint_x: .3
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: .3
                Label:
                    text: 'MEAL SELECTION'
                    font_size: 37.5
                    bold: True
                Widget:
                    size_hint_x: .125
            Widget:
                size_hint_y: .625
            UpdateButton:
                size_hint_y: .165
                text: 'Update'
            Button:
                on_release: root.info_popup()
                size_hint_y: .165
                text: 'About The Cuisine'
            Widget:
                size_hint_y: .925
        BoxLayout:
            size_hint_x: .025

<MealScreen@Screen>:
    name: 'meal_screen'
    screen_manager: self.screen_manager

    MealScreenLayout:
        screen_manager: root.screen_manager

    SideBar:
        screen_manager: root.screen_manager

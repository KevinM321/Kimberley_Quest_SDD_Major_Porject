<InputBox@BoxLayout>
    input_box: _input_box
    name: 'name'
    password: False
    spacing: 12.5
    Widget:
        size_hint_x: .1
    Label:
        bold: 'True'
        font_size: 20
        text: root.name
        size_hint_x: .4
    TextInput:
        id: _input_box
        multiline: False
        write_tab: False
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        background_color: 1, 1, 1, .3
        cursor_color: 0, 0, 0, 1
        password: root.password

<RegisterSuccessfulLayout>
    btn: _btn
    usr_label: _usr_label
    orientation: 'vertical'
    Widget:
        size_hint_y: .2
    Label:
        color: 0, 0, 0, 1
        size_hint_y: .35
        text: 'Your Username Will Be:'
        font_size: 20
    Label:
        size_hint_y: .325
        color: 0, 0, 0, 1
        id: _usr_label
        font_size: 35
        bold: True
    Label:
        text_size: self.size
        valign: 'top'
        halign: 'center'
        size_hint_y: .1
        text: '(Case Sensitive)'
        color: 0, 0, 0, 1
    Widget:
        size_hint_y: .2
    BoxLayout:
        size_hint_y: .2
        Widget:
        Button:
            id: _btn
            text: 'Confirm'
            size_hint_x: .4
        Widget:

<OpenAnimation>
    size_hint: None, None
    size: 375, 250
    source: 'res/system/kq_ship.png'

<LoginInputBox@BoxLayout>
    register_button: _register_button
    usr_name_input: _usr_name_input
    psw_input: _psw_input
    size_hint_y: .45
    size_hint_x: .3325
    orientation: 'vertical'
    spacing: 10
    BoxLayout:
        padding: 15
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'res/system/kq_logo.png'
    InputBox:
        id: _usr_name_input
        name: 'Username'
        size_hint_y: .3
        Label:
            size_hint_x:  .3
    InputBox:
        id: _psw_input
        name: 'Password'
        password: True
        size_hint_y: .3
        Button:
            text: 'Show'
            left: self.right
            on_release:
                self.text = "Hide" if self.text == "Show" else "Show"
                self.parent.password = self.text == "Show"
            size_hint_x: .3
    BoxLayout:
        size_hint_y: .325
        Widget:
            size_hint_x: .66125
        Button:
            id: _register_button
            size_hint_x: .5
            text: 'Register'
        Widget:
    BoxLayout:
        size_hint_y: .35

<ErrorPopup>
    pos_hint: {'center_x': .8}

<ErrorLabel>
    orientation: 'vertical'
    error_text: _error_text
    sub_text: _sub_text
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/white_background.jpg'
    Label:
        color: 0, 0, 0, 1
        font_size: 32.5
        bold: True
        id: _error_text
    Label:
        id: _sub_text
        size_hint_y: None
        height: 10
        color: 0, 0, 0, 1
    Widget:
        size_hint_y: None
        height: 25


<LoginScreenLayout>
    login_box: _login_box
    login_screen_layout: _login_screen_layout
    register_screen_layout: _register_screen_layout
    Image:
        size_hint: None, None
        size: root.size
        allow_stretch: True
        keep_ratio: False
        pos_hint: {"center_x": .5, "center_y": .5}
        source: 'res/system/kq_login.jpg'
    OpenAnimation:
        pos: 1450, 267.5
    RelativeLayout:
        pos: 0, 0
        id: _login_screen_layout
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            LoginInputBox:
                id: _login_box
        BoxLayout:
            size_hint: .185, .315
            pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                background_normal: 'res/system/login_button_normal.png'
                background_down: 'res/system/login_button_down.png'
                bold: True
                font_size: 22.5
                text: 'BEGIN YOUR JOURNEY'
                on_release: root.login()
    RegisterScreenLayout:
        id: _register_screen_layout
        pos: 1250, 0


<LoginScreen@Screen>:
    name: 'login_screen'
    screen_manager: self.screen_manager

    LoginScreenLayout:
        screen_manager: root.screen_manager

#    ErrorPopup:
#        screen_manager: root.screen_manager
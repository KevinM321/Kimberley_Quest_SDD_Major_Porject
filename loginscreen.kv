<InputBox@BoxLayout>
    input_box: _input_box
    name: 'name'
    password: False
    spacing: 12.5
    Widget:
        size_hint_x: .1
    Label:
        bold: 'True'
        font_size: 20
        text: root.name
        size_hint_x: .4
    TextInput:
        id: _input_box
        multiline: False
        write_tab: False
        background_color: 1, 1, 1, .3
        cursor_color: 0, 0, 0, 1
        password: root.password

<OpenAnimation>
    size_hint: None, None
    size: 375, 250
    source: 'res/system/kq_ship.png'

<LoginInputBox@BoxLayout>
    usr_name_input: _usr_name_input
    psw_input: _psw_input
    size_hint_y: .425
    size_hint_x: .325
    orientation: 'vertical'
    spacing: 10
    BoxLayout:
        padding: 15
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'res/system/kq_logo.png'
    InputBox:
        id: _usr_name_input
        name: 'Username'
        size_hint_y: .3
        Label:
            size_hint_x:  .3
    InputBox:
        id: _psw_input
        name: 'Password'
        password: True
        size_hint_y: .3
        Button:
            text: 'Show'
            left: self.right
            on_release:
                self.text = "Hide" if self.text == "Show" else "Show"
                self.parent.password = self.text == "Show"
            size_hint_x: .3
    BoxLayout:
        size_hint_y: .35

<ErrorPopup>
    pos_hint: {'center_x': .8}

<ErrorLabel>
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/white_background.jpg'
    color: 0, 0, 0, 1
    font_size: 32.5
    bold: True


<LoginScreenLayout>
    login_box: _login_box
    Image:
        size_hint: None, None
        size: root.size
        allow_stretch: True
        keep_ratio: False
        pos_hint: {"center_x": .5, "center_y": .5}
        source: 'res/system/kq_login.jpg'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        LoginInputBox:
            id: _login_box
    OpenAnimation:
        pos: 1450, 267.5
    BoxLayout:
        size_hint: .185, .315
        pos_hint: {'center_x': .5, 'center_y': .5}
        Button:
            background_normal: 'res/system/login_button_normal.png'
            background_down: 'res/system/login_button_down.png'
            bold: True
            font_size: 22.5
            text: 'BEGIN YOUR JOURNEY'
            on_release: root.login()

<LoginScreen@Screen>:
    name: 'login_screen'
    screen_manager: self.screen_manager

    LoginScreenLayout:
        screen_manager: root.screen_manager

<MenuButton@Button>
    background_normal: ''
    background_color: .1, .1, 1, .775
    bold: True
    size_hint_y: .1

<ProfileImage>:
    source: 'res/system/male_profile.jpg'

<ProfileInfo>:
    Label:
        font_size: 25
        text: 'type:'
    Label:
        size_hint_x: .3
        font_size: 20
        text: 'info'

<HomeScreenButton@Button>:
    font_size: 17.5
    bold: True

<SideBar>
    day: _day
    size_hint_x: .2
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'res/system/white_background.jpg'
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .3
            Image:
                size: self.size
                pos: self.pos
                source: 'res/system/sidebar_logo.png'
        MenuButton:
            text: 'HOME'
            on_release: root.screen_manager.current = 'home_screen'
        MenuButton:
            text: 'ACTIVITY'
            on_release: root.screen_manager.current = 'activity_screen'
        MenuButton:
            text: 'MEAL'
            on_release: root.screen_manager.current = 'meal_screen'
        MenuButton:
            text: 'LOCATION'
            on_release: root.screen_manager.current = 'location_screen'
        BoxLayout:
            size_hint_y: .2
            Widget:
                size_hint_y: .4
            Label:
                font_size: 21.25
                id: _day
                bold: True
                color: 0, 0, 0, 1
            Widget:
        BoxLayout:
            size_hint_y: .1
            KimberleyInfo:
                background_normal: 'res/system/kq_info_normal.png'
                background_down: 'res/system/kq_info_down.png'
                size_hint: None, None
                size: 50, 50
            Widget:

<HomeScreenLayout>
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'res/system/kq_2.jpg'
    pi: _pi
    activity_img: _activity_img
    activity_name: _activity_name
    Label:
        size_hint_x: .2
    BoxLayout:
        id: _main_display
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .225
            Label:
                text: 'Home'
                font_size: 37.5
                size_hint_x: .375
                bold: True
                color: 0, 0, 0, 1
            Widget:
        BoxLayout:
            Widget:
                size_hint_x: .225
            BoxLayout:
                size_hint_x: .9
                orientation: 'vertical'
                Label:
                    id: _activity_name
                    text_size: self.size
                    color: 0, 0, 0, 1
                    font_size: 22.5
                    size_hint_y: .15
                    halign: 'left'
                Image:
                    canvas.before:
                        Color:
                            rgba: .3, .3, .3, .9
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: _activity_img

            ProfileImage:
                id: _pi
                size: self.size
                pos: self.pos
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .75
                size_hint_x: .95
        BoxLayout:
            size_hint_y: .075
        BoxLayout:
            Label:
                size_hint_x: .075
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: .3, .3, .3, .7
                    Rectangle:
                        size: self.size
                        pos: self.pos
                    Line:
                        width: 3.25
                        rectangle: self.x, self.y, self.width, self.height
                BoxLayout:
                    BoxLayout:
                        orientation: 'vertical'
                        ProfileInfo:
                        ProfileInfo:
                    BoxLayout:
                        orientation: 'vertical'
                        ProfileInfo:
                        ProfileInfo:
                BoxLayout:
                    size_hint_y: .2
                    Widget:
                    HomeScreenButton:
                        text: 'Change Profile'
                        size_hint_x: .275
                    Widget:

            Label:
                size_hint_x: .03
        Widget:
            size_hint_y: .04
        BoxLayout:
            size_hint_y: .2
            Widget:
            BoxLayout:
                size_hint_x: .375
                spacing: 20
                HomeScreenButton
                    text: 'View Receipt'
                HomeScreenButton:
                    text: 'Change Password'
            Widget:
                size_hint_x: .0275
        Widget
            size_hint_y: .04




<HomeScreen@Screen>:
    name: 'home_screen'
    screen_manager: self.screen_manager

    HomeScreenLayout:
        screen_manager: root.screen_manager

    SideBar:
        group: 'sidebar'
        screen_manager: root.screen_manager
